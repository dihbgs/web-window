{
	"compilerOptions": {
		"strict": true,
		"lib": ["es6"],
		"target": "es5",
		"sourceMap": true,
		"outDir": "./build",
		"module": "CommonJS",
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
	  "test/*"
	]
  }